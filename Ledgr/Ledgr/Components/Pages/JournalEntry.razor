@page "/journalEntry/{Username}/"
@using System.Collections
@using System.Reflection.Metadata
@using LedgrLogic
@using Org.BouncyCastle.Tls
@inject NavigationManager NavigationManager
@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Journal Entry • LEDGR</title>

    <!-- Base + Page Styles -->
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/journal.css" />
</head>

<body class="page page--journal" data-page="entry">
<!-- HEADER -->
<header class="app-header">
    <div class="app-header__top">
        <div class="brand">
            <img src="logo-slogan.png" alt="LEDGR" class="brand__logo" />
        </div>

        <div class="user">
            <button id="userMenuBtn" class="user__btn">
                <span class="user__name" id="activeUserName">@Username</span>
                <svg class="icon icon--caret" viewBox="0 0 24 24"><path d="M7 10l5 5 5-5z"/></svg>
            </button>

            <ul id="userMenu" class="menu" hidden>
                <li><button class="menu__item" id="logoutBtn">Log out</button></li>
            </ul>
        </div>
    </div>

    <nav class="app-nav">
        <div class="app-nav__inner">
            <ul class="app-nav__list">
                <li><a @onclick="() => Nav.Home(Username)" class="app-nav__link" href="#">Dashboard</a></li>
                <li><a @onclick="() => Nav.CoAListCall(Username)" class="app-nav__link" href="#">Chart of Accounts</a></li>
                <li><a @onclick="() => Nav.CoAEventLog(Username)" class="app-nav__link" href="#">Event Log</a></li>
                <li><a @onclick="() => Nav.JournalCall(Username)" class="app-nav__link is-active" href="#">Journal</a></li>
                <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Adjusting Entries</a></li>
                <li><a @onclick="() => Nav.Reports(Username)" class="app-nav__link" href="#">Reports</a></li>
            </ul>
        </div>
    </nav>
</header>

<SideBar>
    <button @onclick="(() => Nav.Home(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Dashboard</button>
    <button @onclick="(() => Nav.CoAListCall(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Chart of Accounts List</button>
    <button @onclick="(() => Nav.CoAForm(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Form</button>
    <button @onclick="(() => Nav.CoAEventLog(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Event Log</button>
    @if (Role == "Admin")
    {
    <button @onclick="() => Nav.ManageUser(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Manage Users</button>
    <button @onclick="() => Nav.PasswordReport(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Password Report</button>
    }
</SideBar>

<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <a href="journal.html" class="crumb">
        <svg viewBox="0 0 24 24" class="icon"><path d="M15 6l-6 6 6 6"/></svg>
        <span>Return</span>
    </a>
    <span class="sep">/</span>
    <a href="journal.html" class="crumb">Journal</a>
    <span class="sep">/</span>
    <span class="crumb current">New Journal Entry</span>
</div>

<!-- DATE DROPDOWN BOX -->
<div class="toolbar">
    <button id="dateBtn" class="date-btn" aria-haspopup="dialog" aria-expanded="false">
        <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
        </svg>
        <span id="dateText">@CalendarDate</span>
    </button>
    <input id="dateInput" type="date" class="visually-hidden">
</div>

<!-- CALENDAR -->
<div id="calendarPopover" class="cal" role="dialog" aria-modal="true" aria-labelledby="calLabel" hidden>
    <div class="cal__inner">
        <div class="cal__header">
            <button class="cal__nav" data-dir="-1" aria-label="Previous month">‹</button>
            <div id="calLabel" class="cal__label">October 2025</div>
            <button class="cal__nav" data-dir="1" aria-label="Next month">›</button>
        </div>
        <div class="cal__grid cal__dow">
            <span>Su</span><span>Mo</span><span>Tu</span><span>We</span><span>Th</span><span>Fr</span><span>Sa</span>
        </div>
        <div id="calGrid" class="cal__grid"></div>
    </div>
</div>

<main class="container">
    <!-- List card -->
    <section class="cards">
        <article id="journalEntryCard" class="card card--page" aria-labelledby="jeTitle">
            <div class="page-head page-head--stack">
                <div>
                    <h1 id="jeTitle" class="h2">Journal Entry</h1>
                    <h2 class="muted">Create / Edit your journal entry</h2>
                </div>
            </div>
            
            @if (Alert != string.Empty)
            {
                <div class="alert">
                    <p><strong>@Alert</strong></p>
                </div>
            }
            
            <!-- Journal Form -->
            <form id="journalForm" novalidate>
                <div class="form-grid">
                    <div class="field">
                        <span class="label">Reference</span>
                        <output id="jeRef" class="output output--center">JE - @Reference</output>
                    </div>
                    <label class="field">
                        <span class="label">Date</span>
                        <div class="date-field">
                            <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
                            </svg>
                            <InputText @bind-Value="Date" type="date" id="jeDate" required />
                        </div>
                    </label>
                </div>

                <fieldset class="lines">
                    <legend class="legend">Journal Entries</legend>

                    <div class="line-head">
                        <span>Account</span>
                        <span class="num">Debit</span>
                        <span class="num">Credit</span>
                        <span class="center visually-hidden">Remove</span>
                    </div>

                    <div id="lineItems" class="line-items">
                        @for (int i = 0; i < EntryLines; i++)
                        {
                            int index = i;
                            <div class="line-item">
                                <InputSelect @key="i" @bind-Value="AccountNameLine[index]">
                                    <option value="" selected>Select...</option>
                                    @foreach (var option in GetAvailableOptions(i))
                                    {
                                        <option @key="option" value="@option">@option</option>
                                    }
                                </InputSelect>
                                <!-- Enable/Disable Debit Section approrpiately -->
                                @if (CreditLines[index] != 0.00)
                                {
                                    <input placeholder="-- --" readonly style="text-align: center"/>
                                }
                                @if (CreditLines[index] == 0.00)
                                {
                                <InputNumber @bind-Value="DebitLines[index]" style="text-align: right"></InputNumber>
                                }
                                
                                <!-- Enable / Disable the credit field appropriately -->
                                @if (DebitLines[index] != 0.00)
                                {
                                    <input placeholder="-- --" style="text-align: center" readonly/>
                                }
                                @if (DebitLines[index] == 0.00)
                                {
                                <InputNumber @bind-Value="CreditLines[index]" style="text-align: right"></InputNumber>
                                }
                            </div>
                        }
                    </div>

                    <div class="totals">
                        <div class="totals__row">
                            <span>Totals</span>
                            <output id="totalDebit" class="num">$@TotalDebits</output>
                            <output id="totalCredit" class="num">$@TotalCredits</output>
                            <span></span>
                        </div>

                        <div class="line-actions">
                            <button @onclick="AddDebit" type="button" id="addLine" class="btn btn--secondary">+ Add Debit</button>
                            <button @onclick="AddCredit" type="button" id="addLine" class="btn btn--secondary">+ Add Credit</button>
                        </div>

                        <div id="balanceState" class="balance balance--notok" aria-live="polite">
                            @if (EntryLines < 2)
                            {
                                <span class="badge badge--error" id="balanceBadge">Not Balanced</span>
                                <span class="muted" id="balanceDiff">Not enough Accounts</span>
                            }
                            @if (EntryLines >= 2)
                            {
                                if (Difference != 0)
                                {
                                    <span class="badge badge--error" id="balanceBadge">Not Balanced</span>
                                    <span class="muted" id="balanceDiff">(Difference: $@DifferenceFormat)</span>
                                }

                                if (Difference == 0)
                                {
                                    <span class="badge badge--error" style="color: green" id="balanceBadge">Balanced</span>
                                    <span class="muted" id="balanceDiff">(Difference: $@DifferenceFormat)</span>
                                }
                            }
                        </div>
                    </div>
                </fieldset>

                <!-- Description/Comment Field -->
                <label class="field">
                    <span class="label">Description / Comment <span class="muted">(optional)</span></span>
                    <InputTextArea @bind-Value="Description" id="jeDesc" rows="3" placeholder="Enter details about this journal entry…"></InputTextArea>
                </label>

                <!-- Attachments -->
                <fieldset class="attachments">
                    <legend class="legend">Attach Documents <span class="muted">(optional)</span></legend>
                    <div class="attachments-inner">
                        <p class="muted small">Allowed: pdf, docx, xlsx, csv, jpg, png</p>
                        <InputFile OnChange="HandleFile" id="jeFiles" type="file" multiple accept=".pdf,.doc,.docx,.xlsx,.csv,.jpg,.jpeg,.png" />
                    </div>
                </fieldset>


                <div class="form-actions">
                    <!--<button type="button" id="saveDraft" class="btn btn--secondary">Save Draft</button>-->
                    <button @onclick="ResetForm" type="button" id="resetForm" class="btn btn--secondary">Reset Form</button>
                    <button @onclick="SubmitEntry" type="button" id="submitForApproval" class="btn btn--primary">Submit for Approval</button>
                </div>

                <!-- Activity Log 
                <section aria-labelledby="activityTitle" class="activity">
                    <h1 id="activityTitle" class="h2">Activity Log</h1>
                    <div id="activityLog" class="activity__items"></div>
                </section>
                -->
            </form>
        </article>
    </section> 
                
</main>

<!-- Footer -->
<footer class="app-footer">
    <div class="app-footer__inner">
        <nav class="footer-nav">
            <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
            <a class="link" href="privacy.html">Privacy</a>
            <a class="link" href="terms.html">Terms</a>
        </nav>
        <small class="muted">© 2025 LEDGR · Build v0.1</small>
    </div>
</footer>

<script src="/app.js"></script>
<script src="/journal.js"></script>

</body>
</html>

@code{

    [Parameter] public string Username { get; set; }
    
    public string Role { get; set; } = string.Empty;
    public string CalendarDate = DateTime.Today.ToString("M");

    public int EntryLines => DebitAmount + CreditAmount;
    public int DebitAmount { get; set; } = 0;
    public int CreditAmount { get; set; } = 0;
    public List<string> EntryBalances { get; set; } = new List<string>();
    public List<string> AccountNumbers { get; set; } = new List<string>();
    public List<string> AccountNames { get; set; } = new List<string>();
    public List<string> SelectedValues { get; set; } = new List<string>();
    
    // Journal Specific
    public string Reference { get; set; } = Accountant.GetNextJEDNumber();
    public string Comment { get; set; } = string.Empty;
    public List<string> AccountNameLine { get; set; } = new List<string>();
    public List<Double> DebitLines { get; set; } = new List<Double>();
    public List<Double> CreditLines { get; set; } = new List<Double>();

    public double TotalDebits => DebitLines.Sum();
    public double TotalCredits => CreditLines.Sum();
    public double Difference => ((TotalDebits) - (TotalCredits));

    public string TotalDebitsFormat => TotalDebits.ToString("F2");
    public string TotalCreditsFormat => TotalDebits.ToString("F2");
    public string DifferenceFormat => Difference.ToString("F2");
    
    // Passing Parameters
    public string Date { get; set; } = string.Empty;
    public string Description { get; set; } = string.Empty;
    private IBrowserFile? RefDoc;
    
    // Alerts
    public string Alert { get; set; } = string.Empty;
    

    public void AddDebit()
    {
        try
        {
            if (EntryLines == AccountNames.Count) { throw new InsufficientAccountNamesException("Cannot have more journal entries than valid accounts"); }
            DebitAmount++;
        }
        catch (InsufficientAccountNamesException e) { Alert = e.Message; }
        catch (Exception e) { Console.WriteLine(e.Message); }
    }

    public void AddCredit()
    {
        try
        {
            if (EntryLines == AccountNames.Count) { throw new InsufficientAccountNamesException("Cannot have more journal entries than valid accounts"); }
            CreditAmount++;
        }
        catch (InsufficientAccountNamesException e) { Alert = e.Message; }
        catch (Exception e) { Console.WriteLine(e.Message); }
    }

    public async Task HandleFile(InputFileChangeEventArgs e)
    {
        RefDoc = e.File;
    }

    private IEnumerable<string> GetAvailableOptions(int index)
    {
        var usedByOthers = AccountNameLine
            .Select((val, i) => (val, i))
            .Where(t => t.i != index && !string.IsNullOrEmpty(t.val))
            .Select(t => t.val!)
            .ToHashSet();


        return AccountNames.Where(opt => !usedByOthers.Contains(opt));
    }
    
    private void OnSelectChange(int index, ChangeEventArgs e)
    {
        StateHasChanged();
    }

    private void ResetForm()
    {   
        Date = string.Empty;
        Description = string.Empty;
        RefDoc = null;
    }
    
    protected override async Task OnParametersSetAsync()
    {
        // Get the permissions of the User
        Role = (await Admin.GetUserFromUserName(Username)).GetRole();
        
        // Gather each account and get the names of each of them
        List<string> Accounts = Account.GetAccounts("").Result;
        for (int i = 0; i < Accounts.Count; i += 15)
        {
            AccountNumbers.Add(Accounts[i]);
            AccountNames.Add(Accounts[i + 1]);
            SelectedValues.Add(string.Empty);
            AccountNameLine.Add(string.Empty);
            DebitLines.Add(0.00);
            CreditLines.Add(0.00);
        }
        SelectedValues = new List<string>(new string[AccountNames.Count]);

        StateHasChanged();
    }

    public async void SubmitEntry()
    {
        Alert = string.Empty;
        if (Date == string.Empty)
        {
            Alert = "Please select a date for this journal entry";
        }
        else if (EntryLines < 2)
        {
            Alert = "Not enough accounts have been added";
        }
        else if (VerifyAmounts() == false)
        {
            Alert = "Please enter at least one debit and one credit";
        }
        else if (Difference != 0)
        {
            Alert = "Accounts are not balanced - Please verify Total of Debits is equal to Total of Credits";
        }
        else
        {
            int journalID = Accountant.CreateJournalEntry(Date, Description, Username);
            for (int i = 0; i < DebitLines.Count; i++)
            {
                if (DebitLines[i] != 0)
                {
                    Accountant.CreateJournalEntryDetails(Convert.ToInt32(AccountNumbers[i]), DebitLines[i], "Debit", journalID);
                }
            }
            for (int i = 0; i < CreditLines.Count; i++)
            {
                if (CreditLines[i] != 0)
                {
                    Accountant.CreateJournalEntryDetails(Convert.ToInt32(AccountNumbers[i]), CreditLines[i], "Credit", journalID);
                }
            }
            NavigationManager.NavigateTo($"/CoAList/{Username}");
        }
    }

    public bool VerifyAmounts()
    {
        bool hasDebit = false;
        bool hasCredit = false;
        
        foreach (double debit in DebitLines)
        {
            if (debit != 0)
            {
                hasDebit = true;
                break;
            }
        }

        foreach (double credit in CreditLines)
        {
            if (credit != 0)
            {
                hasCredit = true;
                break;
            }
        }

        if (hasDebit && hasCredit)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}

