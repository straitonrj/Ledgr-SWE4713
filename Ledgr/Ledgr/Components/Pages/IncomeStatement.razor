@page "/incomeStatement/{Username}"
@using LedgrLogic
@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Income Statement • LEDGR</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

  <!-- Base Styles -->
  <link rel="stylesheet" href="styles.css" />
  <link rel="stylesheet" href="journal.css" />
  <link rel="stylesheet" href="reports.css" />
  <link rel="stylesheet" href="incomeStatement.css" />
</head>

<body class="page page-report-income">
<!-- HEADER -->
<header class="app-header">
  <div class="app-header__top">
    <div class="brand">
      <img src="logo-slogan.png" alt="LEDGR Logo" class="brand__logo" />
    </div>

    <div class="user">
      <button @onclick="LogoutVisibility" id="userMenuBtn" class="user__btn" aria-haspopup="menu" aria-expanded="false">
        <svg class="icon icon--user" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z"/>
        </svg>
        <span class="user__name">@Username</span>
        <svg class="icon icon--caret" viewBox="0 0 24 24" aria-hidden="false"><path d="M7 10l5 5 5-5H7z"/></svg>
      </button>
      @if (ShowLogout)
      {
      <button @onclick="Nav.LogOut" class="menu__item" role="menuitem" id="logoutBtn">
        <svg class="icon" viewBox="0 0 24 24" aria-hidden="false">
          <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-5 5 5 5zM4 19h6v2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6v2H4v14z"/>
        </svg>
        Log out
      </button>
      }
    </div>
  </div>

  <nav class="app-nav" aria-label="Primary">
    <div class="app-nav__inner">
      <ul class="app-nav__list">
        <li><a @onclick="(() => Nav.Home(Username))" class="app-nav__link" href="#">Dashboard</a></li>
        <li><a @onclick="(() => Nav.CoAListCall(Username))" class="app-nav__link" href="#">Chart of Accounts</a></li>
        <li><a @onclick="(() => Nav.CoAEventLog(Username))" class="app-nav__link" href="#">Event Log</a></li>
        <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Journal</a></li>
        <li><a @onclick="(() => Nav.Reports(Username))" class="app-nav__link is-active" href="#">Reports</a></li>
      </ul>
    </div>
  </nav>
</header>

<SideBar>
  <button @onclick="(() => Nav.Home(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Dashboard</button>
  <button @onclick="(() => Nav.CoAListCall(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Chart of Accounts List</button>
  <button @onclick="(() => Nav.CoAForm(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Form</button>
  <button @onclick="(() => Nav.CoAEventLog(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Event Log</button>
  @if (Role == "Admin")
  {
    <button @onclick="() => Nav.ManageUser(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Manage Users</button>
    <button @onclick="() => Nav.PasswordReport(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Password Report</button>
  }
</SideBar>

<!-- DATE BAR -->
<div class="toolbar">
  <button id="dateBtn" class="date-btn" aria-haspopup="dialog" aria-expanded="false">
    <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
    </svg>
    <span id="dateText">@CalendarDate</span>
  </button>
  <input id="dateInput" type="date" class="visually-hidden">
</div>

<!-- MAIN -->
<main class="container">
  <section class="cards">
    <article class="card card--page report-card report-card--income">
      <!-- Header -->
      <header class="page-head page-head--stack" style="justify-content: center">
        <header class="report-header">
          <h2 class="report-title" style="text-align: center; font-size: 35px;">Addams & Family Inc.</h2>
          <h2 class="report-title" style="text-align: center; font-size: 35px">Income Statement</h2>
          <p class="muted small" id="isPeriodLabel" style="text-align: center">
            For the Month Ended @ReportDate
          </p>
        </header>
      </header>

      <!-- Filters / Controls -->
      <form class="report-filters" method="get" data-form="income-statement" data-action="generate-income-statement">
        <div class="report-filters__row">
          <div class="filter-group">
            <label for="isFrom">From</label>
            <input type="date" id="isFrom" name="from" />
          </div>

          <div class="filter-group">
            <label for="isTo">To</label>
            <input type="date" id="isTo" name="to" />
          </div>

          <div class="filter-group">
            <label for="isBasis">Basis</label>
            <select id="isBasis" name="basis">
              <option value="accrual">Accrual</option>
              <option value="cash">Cash</option>
            </select>
          </div>

          <div class="filter-actions">
            <button type="submit" class="btn btn--primary">Generate</button>
          </div>
        </div>

        <div class="report-filters__row report-filters__row--secondary">
          <span class="muted small">
            Use the controls below to save or share this report once generated.
          </span>
          <div class="export-actions">
            <button type="button" class="btn btn--secondary btn--sm">Save</button>
            <button type="button" class="btn btn--secondary btn--sm">Email</button>
            <button type="button" class="btn btn--secondary btn--sm">Print</button>
          </div>
        </div>
      </form>

      <!-- Report body -->
      <section class="report-body">
        <div class="table-wrap">
          <table class="table report-table">
            <thead>
            <tr>
              <th>Description</th>
              <th class="right">Amount</th>
            </tr>
            </thead>
            <tbody id="isBody">
            <!-- Revenues section -->
            <tr class="section-row">
              <td colspan="2"><strong>Revenues</strong></td>
            </tr>
            @for (int i = 0; i < RevData.Count; i += 2)
            {
              int index = i;
              <tr>
                <td>@RevData[index]</td>
                <td class="right">$@RevData[index + 1]</td>
              </tr>
            }
            <tr class="subtotal-row">
              <td><strong>Total Revenues</strong></td>
              <td class="right" id="isTotalRevenues">$@RevTotal</td>
            </tr>
            <!--
            <tr>
              <td>Service Revenue</td>
              <td class="right">$18,000.00</td>
            </tr>
            <tr>
              <td>Sales Revenue</td>
              <td class="right">$4,500.00</td>
            </tr>
            <tr class="subtotal-row">
              <td><strong>Total Revenues</strong></td>
              <td class="right" id="isTotalRevenues">$22,500.00</td>
            </tr>
            -->

            <!-- Expenses section -->
            <tr class="section-row">
              <td colspan="2"><strong>Expenses</strong></td>
            </tr>
            @for (int i = 0; i < ExpData.Count; i += 2)
            {
            int index = i;
            <tr>
              <td>@ExpData[index]</td>
              <td class="right">$@ExpData[index + 1]</td>
            </tr>
            }
            <tr class="subtotal-row">
              <td><strong>Total Expenses</strong></td>
              <td class="right" id="isTotalRevenues">$@ExpTotal</td>
            </tr>
            <!--
            <tr>
              <td>Salaries Expense</td>
              <td class="right">$9,000.00</td>
            </tr>
            <tr>
              <td>Rent Expense</td>
              <td class="right">$2,500.00</td>
            </tr>
            <tr>
              <td>Utilities Expense</td>
              <td class="right">$800.00</td>
            </tr>
            <tr>
              <td>Supplies Expense</td>
              <td class="right">$450.00</td>
            </tr>
            <tr class="subtotal-row">
              <td><strong>Total Expenses</strong></td>
              <td class="right" id="isTotalExpenses">$12,750.00</td>
            </tr>
            -->

            </tbody>
            <tfoot>
            <tr class="report-totals">
              <th>Net Income</th>
              <td class="right" id="isNetIncome">$@Total</td>
            </tr>
            </tfoot>
          </table>
        </div>

        <p class="muted small">
          Net income (or net loss) is calculated as total revenues minus total expenses for the selected period.
        </p>
      </section>
      <div class="page-head__actions">
        <a @onclick="() => Nav.Reports(Username)" href="#" class="btn btn--secondary btn--sm">Back to Reports</a>
      </div>
    </article>
  </section>
</main>

<!-- FOOTER -->
<footer class="app-footer">
  <div class="app-footer__inner">
    <nav class="footer-nav">
      <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
      <a href="privacy.html" class="link">Privacy</a>
      <a href="terms.html" class="link">Terms</a>
    </nav>
    <small class="muted">© 2025 LEDGR · Build v0.1</small>
  </div>
</footer>

<script src="dashboardN.js"></script>
</body>
</html>

@code {

  [Parameter] public string Username { get; set; }
  public string Role { get; set; }
  public string CalendarDate = DateTime.Today.ToString("M");
  public string ReportDate = DateTime.Today.ToString("d");
  
  // Report Data
  public string toDate = DateTime.Today.ToString("yyyy-MM-dd");
  public string fromDate = DateTime.Today.AddMonths(-5).ToString("yyyy-MM-dd");
  public List<string> IS { get; set; } = new List<string>();

  public List<string> RevData { get; set; } = new List<string>();
  public List<string> ExpData { get; set; } = new List<string>();

  public string Total { get; set; } = "0";
  public string RevTotal { get; set; } = "0";
  public string ExpTotal { get; set; } = "0";
  
  protected override async Task OnParametersSetAsync()
  {
    Role = User.GetUserFromUserName(Username).Result.GetRole();

    IS = Manager.GetIncomeStatement(fromDate, toDate);

    for (int i = 0; i < IS.Count; i += 2)
    {
      if (IS[i].Contains("Revenue"))
      {
        RevData.Add(IS[i]);
        RevData.Add(Convert.ToDouble(IS[i + 1]).ToString("N2"));
        RevTotal = Convert.ToString(Convert.ToDouble(RevTotal) + Convert.ToDouble(IS[i + 1]));
      }
      if (IS[i].Contains("Expense"))
      {
        ExpData.Add(IS[i]);
        ExpData.Add(IS[i + 1]);
        ExpTotal = Convert.ToString(Convert.ToDouble(ExpTotal) + Convert.ToDouble(IS[i + 1]));
      }
    }
    
    // Convert the totals into formatted variants
    Total = (Convert.ToDouble(RevTotal) - Convert.ToDouble(ExpTotal)).ToString("N2");
    RevTotal = Convert.ToDouble(RevTotal).ToString("N2");
    ExpTotal = Convert.ToDouble(ExpTotal).ToString("N2");
    StateHasChanged();
  }
  public bool ShowLogout { get; set; } = false;
  public void LogoutVisibility()
  {
    ShowLogout = !ShowLogout;
  }
}