@page "/adjustJournalEntryManager/{Username}"
@using LedgrLogic
@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Adjusting Entry • Manager Review • LEDGR</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

  <!-- Shared Styles -->
  <link rel="stylesheet" href="styles.css" />
  <link rel="stylesheet" href="journal.css" />
  <link rel="stylesheet" href="reports.css" />
  <link rel="stylesheet" href="managerAdjusting.css" />
</head>

<body class="page page-manager-aj-entry">
<!-- HEADER -->
<header class="app-header">
  <div class="app-header__top">
    <div class="brand">
      <img src="logo-slogan.png" alt="LEDGR Logo" class="brand__logo" />
    </div>

    <div class="user">
      <button @onclick="LogoutVisibility" id="userMenuBtn" class="user__btn" aria-haspopup="menu" aria-expanded="false">
        <svg class="icon icon--user" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z"/>
        </svg>
        <span class="user__name">@Username</span>
        <svg class="icon icon--caret" viewBox="0 0 24 24" aria-hidden="false"><path d="M7 10l5 5 5-5H7z"/></svg>
      </button>
      @if (ShowLogout)
      {
      <button @onclick="Nav.LogOut" class="menu__item" role="menuitem" id="logoutBtn">
        <svg class="icon" viewBox="0 0 24 24" aria-hidden="false">
          <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-5 5 5 5zM4 19h6v2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6v2H4v14z"/>
        </svg>
        Log out
      </button>
      }
    </div>
  </div>

  <nav class="app-nav">
    <div class="app-nav__inner">
      <ul class="app-nav__list">
        <li><a @onclick="(() => Nav.Home(Username))" class="app-nav__link" href="#">Dashboard</a></li>
        <li><a @onclick="(() => Nav.CoAListCall(Username))" class="app-nav__link" href="#">Chart of Accounts</a></li>
        <li><a @onclick="(() => Nav.CoAEventLog(Username))" class="app-nav__link" href="#">Event Log</a></li>
        @if (Role != "Admin")
        {
        <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Journal</a></li>
        @if (Role != "Accountant")
        {
        <li><a @onclick="(() => Nav.Reports(Username))" class="app-nav__link is-active" href="#">Reports</a></li>
        }
        }
      </ul>
    </div>
  </nav>
</header>

<SideBar>
  <button @onclick="(() => Nav.Home(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Dashboard</button>
  <button @onclick="(() => Nav.CoAListCall(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Chart of Accounts List</button>
  <button @onclick="(() => Nav.CoAForm(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Form</button>
  <button @onclick="(() => Nav.CoAEventLog(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Event Log</button>
  @if (Role == "Admin")
  {
    <button @onclick="() => Nav.ManageUser(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Manage Users</button>
    <button @onclick="() => Nav.PasswordReport(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Password Report</button>
  }
</SideBar>

<!-- DATE BAR -->
<div class="toolbar">
  <button id="dateBtn" class="date-btn">
    <svg class="icon icon--calendar" viewBox="0 0 24 24">
      <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
    </svg>
    <span id="dateText">@CalendarDate</span>
  </button>
</div>

<!-- MAIN CONTENT -->
<main class="container">
  <section class="cards">
    <article class="card card--page manager-adj-detail">

      <!-- BACK LINK -->
      <a @onclick="() => Nav.JournalEntryAdjustManager(Username)" href="#" class="breadcrumb__back">← Back to Adjusting Entries</a>

      <!-- HEADER -->
      <header class="page-head page-head--stack">
        <div>
          <h1 class="h2">Adjusting Journal Entry</h1>
          <p class="muted">Review adjusting journal entry <strong>AJE-2025-11-001</strong>.</p>
        </div>

        <div class="page-head__actions">
          <span class="pill pill--pending">Pending</span>
        </div>
      </header>

      <!-- ENTRY META -->
      <section class="manager-top">
        <section class="entry-meta">
          <h2 class="section-title">Entry Information</h2>
          <dl class="entry-meta__grid">
            <div><dt>Reference #</dt><dd>JE-2025-11-13-PK8W3E</dd></div>
            <div><dt>Date</dt><dd>11/13/2025</dd></div>
            <div><dt>Created</dt><dd>11/13/2025 10:24 AM</dd></div>
            <div><dt>Last Updated</dt><dd>11/13/2025 10:24 AM</dd></div>
          </dl>
        </section>

        <!-- DECISION SUMMARY -->
        <aside class="decision-summary">
          <h2 class="section-title">Decision</h2>
          <dl>
            <div class="decision-summary__row"><dt>Status</dt><dd>Pending</dd></div>
            <div class="decision-summary__row"><dt>Reviewed by</dt><dd>—</dd></div>
            <div class="decision-summary__row"><dt>Reviewed on</dt><dd>—</dd></div>
          </dl>
        </aside>
      </section>

      <!-- LINES -->
      <section class="entry-lines">
        <div class="section-header">
          <h2 class="section-title">Adjusting Entry Lines</h2>
          <a href="ledger.html" class="btn btn--ghost btn--sm">View in Ledger</a>
        </div>

        <div class="table-wrap">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>#</th>
              <th>Account</th>
              <th class="right">Debit</th>
              <th class="right">Credit</th>
            </tr>
            </thead>
            <tbody>
            <tr><td>1</td><td>Supplies Expense (5200)</td><td class="right">$250.00</td><td class="right">—</td></tr>
            <tr><td>2</td><td>Supplies (1200)</td><td class="right">—</td><td class="right">$250.00</td></tr>
            </tbody>
            <tfoot>
            <tr class="totals-row">
              <th colspan="2">Totals</th>
              <td class="right">$250.00</td>
              <td class="right">$250.00</td>
            </tr>
            </tfoot>
          </table>
        </div>
      </section>

      <!-- DESCRIPTION -->
      <section class="entry-description">
        <h2 class="section-title">Description</h2>
        <p>To record supplies expense for the period based on physical count of remaining supplies.</p>
      </section>

      <!-- ATTACHMENTS -->
      <section class="entry-attachments">
        <h2 class="section-title">Attachments</h2>
        <ul class="file-list">
          <li><a href="#">supplies-count-2025-10.pdf</a> <span class="file-meta">PDF · 124 KB</span></li>
          <li><a href="#">trial-balance-oct.xlsx</a> <span class="file-meta">Excel · 42 KB</span></li>
        </ul>
      </section>

      <!-- MANAGER DECISION -->
      <section class="manager-decision">
        <h2 class="section-title">Manager Decision</h2>
        <p class="muted small">Approve to post this entry to the ledger, or reject with a required explanation.</p>

        <form class="decision-form" method="post">
          <div class="decision-options">
            <label class="radio-pill">
              <input type="radio" name="decision" value="approve"> <span>Approve</span>
            </label>

            <label class="radio-pill">
              <input type="radio" name="decision" value="reject"> <span>Reject</span>
            </label>
          </div>

          <label class="field">
            <span class="label">Manager Comment <span class="muted small">(required if rejecting)</span></span>
            <textarea rows="3" placeholder="Explain your decision..."></textarea>
          </label>

          <div class="decision-actions">
            <a @onclick="() => Nav.JournalEntryAdjustManager(Username)" href="#" class="btn btn--ghost">Cancel</a>
            <button type="submit" class="btn btn--primary">Submit Decision</button>
          </div>
        </form>
      </section>

      <!-- AUDIT TRAIL -->
      <section class="entry-audit">
        <div class="section-header">
          <h2 class="section-title">Audit Trail</h2>
          <a @onclick="() => Nav.CoAEventLog(Username)" href="#" class="btn btn--ghost btn--sm">View Event Log</a>
        </div>

        <dl class="audit-list">
          <div><dt>11/13/2025 10:24 AM</dt><dd>Entry created by Admin User.</dd></div>
          <div><dt>—</dt><dd>No manager decision recorded yet.</dd></div>
        </dl>
      </section>

      <footer class="entry-actions">
        <a @onclick="() => Nav.JournalEntryAdjustManager(Username)" href="#" class="btn btn--ghost">Back to Adjusting Entries</a>
      </footer>
    </article>
  </section>
</main>
       
<!-- FOOTER -->
<footer class="app-footer">
  <div class="app-footer__inner">
    <nav class="footer-nav">
      <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
      <a href="privacy.html">Privacy</a>
      <a href="terms.html">Terms</a>
    </nav>
    <small class="muted">© 2025 LEDGR · Build v0.1</small>
  </div>
</footer>

<script src="dashboardN.js"></script>
</body>
</html>

@code {

  [Parameter] public string Username { get; set; }
  public string Role { get; set; }
  public string CalendarDate = DateTime.Today.ToString("M");


  protected override async Task OnParametersSetAsync()
  {
    Role = User.GetUserFromUserName(Username).Result.GetRole();
    StateHasChanged();
  }
  public bool ShowLogout { get; set; } = false;
  public void LogoutVisibility()
  {
    ShowLogout = !ShowLogout;
  }
}