@page "/balanceSheet/{Username}/"
@using LedgrLogic

@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Balance Sheet • LEDGR</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

  <!-- Base Styles -->
  <link rel="stylesheet" href="styles.css" />
  <link rel="stylesheet" href="journal.css" />
  <link rel="stylesheet" href="reports.css" />
  <link rel="stylesheet" href="reportsBalanceSheet.css" />
</head>

<body class="page page-report-balance-sheet">
<!-- HEADER -->
<header class="app-header">
  <div class="app-header__top">
    <div class="brand">
      <img src="logo-slogan.png" alt="LEDGR Logo" class="brand__logo" />
    </div>

    <div class="user">
      <button @onclick="LogoutVisibility" id="userMenuBtn" class="user__btn" aria-haspopup="menu" aria-expanded="false">
        <svg class="icon icon--user" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z"/>
        </svg>
        <span class="user__name">@Username</span>
        <svg class="icon icon--caret" viewBox="0 0 24 24" aria-hidden="false"><path d="M7 10l5 5 5-5H7z"/></svg>
      </button>
      @if (ShowLogout)
      {
      <button @onclick="Nav.LogOut" class="menu__item" role="menuitem" id="logoutBtn">
        <svg class="icon" viewBox="0 0 24 24" aria-hidden="false">
          <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-5 5 5 5zM4 19h6v2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6v2H4v14z"/>
        </svg>
        Log out
      </button>
      }
    </div>
  </div>

  <nav class="app-nav" aria-label="Primary">
    <div class="app-nav__inner">
      <ul class="app-nav__list">
        <li><a @onclick="(() => Nav.Home(Username))" class="app-nav__link" href="#">Dashboard</a></li>
        <li><a @onclick="(() => Nav.CoAListCall(Username))" class="app-nav__link" href="#">Chart of Accounts</a></li>
        <li><a @onclick="(() => Nav.CoAEventLog(Username))" class="app-nav__link" href="#">Event Log</a></li>
        <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Journal</a></li>
        <li><a @onclick="(() => Nav.Reports(Username))" class="app-nav__link is-active" href="#">Reports</a></li>
      </ul>
    </div>
  </nav>
</header>

<!-- DATE BAR -->
<div class="toolbar">
  <button id="dateBtn" class="date-btn" aria-haspopup="dialog" aria-expanded="false">
    <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
    </svg>
    <span id="dateText">@CalendarDate</span>
  </button>
  <input id="dateInput" type="date" class="visually-hidden">
</div>

<!-- MAIN -->
<main class="container">
  <section class="cards">
    <article class="card card--page report-card report-card--balance-sheet">
      <!-- Header -->
      <header class="page-head page-head--stack" style="justify-content: center">
          <header class="report-header">
            <h2 class="report-title" style="text-align: center; font-size: 35px">Addams & Family Inc.</h2>
            <h2 class="report-title" style="text-align: center; font-size: 25px">Balance Sheet</h2>
            <p class="muted small" id="bsPeriodLabel" style="text-align: center">
              As of @ReportDate
            </p>
          </header>
      </header>

      <!-- Filters / Controls -->
      <form class="report-filters" method="get" data-form="balance-sheet" data-action="generate-balance-sheet">
        <div class="report-filters__row">
          <div class="filter-group">
            <label for="bsAsOf">As of date</label>
            <input type="date" id="bsAsOf" name="asOf" />
          </div>

          <div class="filter-group">
            <label for="bsBasis">Basis</label>
            <select id="bsBasis" name="basis">
              <option value="accrual">Accrual</option>
              <option value="cash">Cash</option>
            </select>
          </div>

          <div class="filter-actions">
            <button type="submit" class="btn btn--primary">Generate</button>
          </div>
        </div>

        <div class="report-filters__row report-filters__row--secondary">
          <span class="muted small">
            Use the controls below to save or share this report once generated.
          </span>
          <div class="export-actions">
            <button type="button" class="btn btn--secondary btn--sm">Save</button>
            <button type="button" class="btn btn--secondary btn--sm">Email</button>
            <button type="button" class="btn btn--secondary btn--sm">Print</button>
          </div>
        </div>
      </form>

      <!-- Report body -->
      <section class="report-body">
        <div class="table-wrap">
          <table class="table report-table">
            <thead>
            <tr>
              <th>Account</th>
              <th></th>
              <th class="right">Amount</th>
            </tr>
            </thead>
            <tbody id="bsBody">
            <!-- Assets -->
            <tr class="section-row">
              <td colspan="3"><strong>Assets</strong></td>
            </tr>
            @for (int i = 0; i < Assets.Count; i += 2)
            {
              int index = i;
              <tr>
                <td>@Assets[index]</td>
                <td></td>
                <td class="right">$@Assets[index + 1]</td>
              </tr>
            }
            <tr class="subtotal-row">
              <td colspan="2"><strong>Total Assets</strong></td>
              <td class="right" id="bsTotalAssets">$@aTotal</td>
            </tr>

            <!-- Liabilities -->
            <tr class="section-row">
              <td colspan="3"><strong>Liabilities</strong></td>
            </tr>
            @for (int i = 0; i < Liability.Count; i += 2)
            {
            int index = i;
            <tr>
              <td>@Liability[index]</td>
              <td></td>
              <td class="right">$@Liability[index + 1]</td>
            </tr>
            }
            
            <tr class="subtotal-row">
              <td colspan="2"><strong>Total Liabilities</strong></td>
              <td class="right" id="bsTotalLiabilities">$@lTotal</td>
            </tr>

            
            <!-- Equity -->
            <tr class="section-row">
              <td colspan="3"><strong>Equity</strong></td>
            </tr>
            @for (int i = 0; i < Equity.Count; i += 2)
            {
            int index = i;
            <tr>
              <td>@Equity[index]</td>
              <td></td>
              <td class="right">$@Equity[index + 1]</td>
            </tr>
            }
            <tr class="subtotal-row">
              <td colspan="2"><strong>Total Equity</strong></td>
              <td class="right" id="bsTotalEquity">$@eTotal</td>
            </tr>
            </tbody>
            <tfoot>
            <tr class="report-totals">
              <th colspan="2">Total Liabilities and Equity</th>
              <td class="right" id="bsTotalLiabEquity">$@leTotal</td>
            </tr>
            </tfoot>
          </table>
        </div>

        <p class="muted small">
          The balance sheet shows that total assets must equal total liabilities plus equity as of the selected date.
        </p>
        <div class="page-head__actions">
          <a @onclick="(() => Nav.Reports(Username))" href="#" class="btn btn--secondary btn--sm">Back to Reports</a>
        </div>
      </section>
    </article>
  </section>
</main>

<!-- FOOTER -->
<footer class="app-footer">
  <div class="app-footer__inner">
    <nav class="footer-nav">
      <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
      <a href="privacy.html" class="link">Privacy</a>
      <a href="terms.html" class="link">Terms</a>
    </nav>
    <small class="muted">© 2025 LEDGR · Build v0.1</small>
  </div>
</footer>

<script src="dashboardN.js"></script>
</body>
</html>

@code {

  [Parameter] public string Username { get; set; }
  public string CalendarDate = DateTime.Today.ToString("M");
  public string ReportDate = DateTime.Today.ToString("d");
  
  public string Role { get; set; } = string.Empty;
  // Report Data
  public string toDate = DateTime.Today.ToString("yyyy-MM-dd");
  public string fromDate = DateTime.Today.AddMonths(-5).ToString("yyyy-MM-dd");
  
  public List<string> Assets = new List<string>();
  public List<string> Liability = new List<string>();
  public List<string> Equity = new List<string>();

  public string aTotal { get; set; } = "0";
  public string lTotal { get; set; } = "0";
  public string eTotal { get; set; } = "0";
  public string leTotal { get; set; } = "0";
  public string Total { get; set; } = "0";
  
  protected override async Task OnParametersSetAsync()
  {
    Role = User.GetUserFromUserName(Username).Result.GetRole();

    Assets = Manager.GetBalanceSheetCategory(fromDate, toDate, "Asset");
    Liability = Manager.GetBalanceSheetCategory(fromDate, toDate, "Liability");
    Equity = Manager.GetBalanceSheetCategory(fromDate, toDate, "Equity");

    for (int i = 0; i < Equity.Count; i += 1)
    {
      Console.WriteLine(Equity[i]);
    }

    // Process / Format Assets
    for (int i = 0; i < Assets.Count; i += 2)
    {
      aTotal = Convert.ToString((Convert.ToDouble(aTotal) + Convert.ToDouble(Assets[i + 1])));
      Assets[i + 1] = Convert.ToDouble(Assets[i + 1]).ToString("N2");
    }
    
    // same but liability
    for (int i = 0; i < Liability.Count; i += 2)
    {
      lTotal = System.Convert.ToString(Convert.ToDouble(aTotal) + Convert.ToDouble(Liability[i + 1]));
      Liability[i + 1] = Convert.ToDouble(Liability[i + 1]).ToString("N2");
    }
    
    // you get the idea
    for (int i = 0; i < Equity.Count; i += 2)
    {
      eTotal = System.Convert.ToString(Convert.ToDouble(eTotal) + Convert.ToDouble(Equity[i + 1]));
      Equity[i + 1] = Convert.ToDouble(Equity[i + 1]).ToString("N2");
    }

    leTotal = (Convert.ToDouble(lTotal) + Convert.ToDouble(eTotal)).ToString("N2");
    Total = (Convert.ToDouble(aTotal) + Convert.ToDouble(lTotal) + Convert.ToDouble(eTotal)).ToString("N2");
    aTotal = Convert.ToDouble(aTotal).ToString("N2");
    lTotal = Convert.ToDouble(lTotal).ToString("N2");
    eTotal = Convert.ToDouble(eTotal).ToString("N2");
    
    StateHasChanged();
  }

  public bool ShowLogout { get; set; } = false;
  public void LogoutVisibility()
  {
    ShowLogout = !ShowLogout;
  }
}