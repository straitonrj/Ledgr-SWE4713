@page "/adjustEntriesManager/{Username}/{EntryID}"
@using LedgrLogic
@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Adjusting Entries (Manager) • LEDGR</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

  <!-- Base + Page Styles -->
  <link rel="stylesheet" href="styles.css" />
  <link rel="stylesheet" href="journal.css" />
  <link rel="stylesheet" href="reports.css" />
  <link rel="stylesheet" href="managerAdjusting.css" />
</head>

<body class="page page-manager-adjusting">
<!-- HEADER -->
<header class="app-header">
  <div class="app-header__top">
    <div class="brand">
      <img src="assets/img/logo.png" alt="LEDGR Logo" class="brand__logo" />
    </div>

    <div class="user">
      <button id="userMenuBtn" class="user__btn" aria-haspopup="menu" aria-expanded="false">
        <svg class="icon icon--user" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z"/>
        </svg>
        <span class="user__name">@Username</span>
        <svg class="icon icon--caret" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M7 10l5 5 5-5H7z"/>
        </svg>
      </button>

      <div id="userMenu" class="menu" role="menu" aria-labelledby="userMenuBtn">
        <button class="menu__item" role="menuitem" id="logoutBtn">
          <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-5 5 5 5zM4 19h6v2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6v2H4v14z"/>
          </svg>
          Log out
        </button>
      </div>
    </div>
  </div>

  <nav class="app-nav" aria-label="Primary">
    <div class="app-nav__inner">
      <ul class="app-nav__list">
        <li><a @onclick="(() => Nav.Home(Username))" class="app-nav__link" href="#">Dashboard</a></li>
        <li><a @onclick="(() => Nav.CoAListCall(Username))" class="app-nav__link" href="#">Chart of Accounts</a></li>
        <li><a @onclick="(() => Nav.CoAEventLog(Username))" class="app-nav__link" href="#">Event Log</a></li>
        <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Journal</a></li>
        <li><a @onclick="(() => Nav.Reports(Username))" class="app-nav__link" href="#">Reports</a></li>
      </ul>
    </div>
  </nav>
</header>

<SideBar>
  <button @onclick="(() => Nav.Home(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Dashboard</button>
  <button @onclick="(() => Nav.CoAListCall(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Chart of Accounts List</button>
  <button @onclick="(() => Nav.CoAForm(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Form</button>
  <button @onclick="(() => Nav.CoAEventLog(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Event Log</button>
  @if (Role == "Admin")
  {
    <button @onclick="() => Nav.ManageUser(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Manage Users</button>
    <button @onclick="() => Nav.PasswordReport(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Password Report</button>
  }
</SideBar>

<!-- DATE TOOLBAR -->
<div class="toolbar">
  <button id="dateBtn" class="date-btn" aria-haspopup="dialog" aria-expanded="false">
    <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
    </svg>
    <span id="dateText">@CalendarDate</span>
  </button>
  <input id="dateInput" type="date" class="visually-hidden">
</div>

<!-- CALENDAR POPOVER -->
<div id="calendarPopover" class="cal" role="dialog" aria-modal="true" aria-labelledby="calLabel" hidden>
  <div class="cal__inner">
    <div class="cal__header">
      <button class="cal__nav" data-dir="-1" aria-label="Previous month">‹</button>
      <div id="calLabel" class="cal__label">October 2025</div>
      <button class="cal__nav" data-dir="1" aria-label="Next month">›</button>
    </div>
    <div class="cal__grid cal__dow">
      <span>Su</span><span>Mo</span><span>Tu</span><span>We</span><span>Th</span><span>Fr</span><span>Sa</span>
    </div>
    <div id="calGrid" class="cal__grid"></div>
  </div>
</div>

<!-- MAIN -->
<main class="container">
  <section class="cards">
    <article class="card card--page manager-aj-list">
      <header class="page-head page-head--stack">
        <div>
          <h1 class="h2">Adjusting Entries (Manager)</h1>
          <p class="muted">
            Review, approve, or reject adjusting journal entries submitted by accountants.
          </p>
        </div>
      </header>

      <!-- Tabs + filters -->
      <div class="tabs tabs-compact" role="tablist" aria-label="Adjusting entry status (manager)">
        <!-- Radios -->
        <input type="radio" name="mgrAjeTab" id="mgrTabPending" checked />
        <label role="tab" for="mgrTabPending" aria-controls="mgrPanelPending">Pending</label>

        <input type="radio" name="mgrAjeTab" id="mgrTabApproved" />
        <label role="tab" for="mgrTabApproved" aria-controls="mgrPanelApproved">Approved</label>

        <input type="radio" name="mgrAjeTab" id="mgrTabRejected" />
        <label role="tab" for="mgrTabRejected" aria-controls="mgrPanelRejected">Rejected</label>

        <!-- Filters -->
        <form class="filters" method="get" data-action="filter-manager-aj-entries">
          <div class="filter-row">
            <div class="filter-group">
              <label for="mgrFromDate">From</label>
              <input type="date" id="mgrFromDate" name="from" />
            </div>
            <div class="filter-group">
              <label for="mgrToDate">To</label>
              <input type="date" id="mgrToDate" name="to" />
            </div>
            <div class="filter-group">
              <label for="mgrSearch">Search</label>
              <input type="search" id="mgrSearch" name="q" placeholder="Account, amount, or date" />
            </div>
            <div class="filter-actions">
              <button type="submit" class="btn btn--secondary btn--sm">Apply</button>
              <a href="manager-adjusting-entries.html" class="btn btn--ghost btn--sm">Clear</a>
            </div>
          </div>
        </form>

        <!-- Pending -->
        <section id="mgrPanelPending" class="tab-panel" role="tabpanel" aria-labelledby="mgrTabPending">
          <div class="table-wrap">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>PR</th>
                <th>JE #</th>
                <th>Date</th>
                <th>Description</th>
                <th class="right">Total Dr</th>
                <th class="right">Total Cr</th>
                <th>Status</th>
                <th class="center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <!-- Example row for layout -->
              <tr>
                <td>PR-101</td>
                <td><a href="adjusting-journal-entry.html">AJE-2025-11-001</a></td>
                <td>11/13/2025</td>
                <td>Supplies adjustment for October</td>
                <td class="right">$250.00</td>
                <td class="right">$250.00</td>
                <td><span class="badge badge--pending">Pending</span></td>
                <td class="center">
                  <a href="adjusting-journal-entry.html" class="link-action">Review</a>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </section>

        <!-- Approved -->
        <section id="mgrPanelApproved" class="tab-panel" role="tabpanel" aria-labelledby="mgrTabApproved">
          <div class="table-wrap">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>PR</th>
                <th>JE #</th>
                <th>Date</th>
                <th>Description</th>
                <th class="right">Total Dr</th>
                <th class="right">Total Cr</th>
                <th>Status</th>
                <th class="center">Actions</th>
              </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </section>

        <!-- Rejected -->
        <section id="mgrPanelRejected" class="tab-panel" role="tabpanel" aria-labelledby="mgrTabRejected">
          <div class="table-wrap">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>PR</th>
                <th>JE #</th>
                <th>Date</th>
                <th>Description</th>
                <th class="right">Total Dr</th>
                <th class="right">Total Cr</th>
                <th>Status</th>
                <th class="center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <!-- Include rejected entries with reason on detail page -->
              </tbody>
            </table>
          </div>
        </section>
      </div>
    </article>
  </section>
</main>

<!-- Footer -->
<footer class="app-footer">
  <div class="app-footer__inner">
    <nav class="footer-nav">
      <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
      <a href="privacy.html" class="link">Privacy</a>
      <a href="terms.html" class="link">Terms</a>
    </nav>
    <small class="muted">© 2025 LEDGR · Build v0.1</small>
  </div>
</footer>

<script src="assets/js/dashboard.js"></script>
</body>
</html>

@code{

  [Parameter] public string Username { get; set; }
  public string Role { get; set; }
  public string CalendarDate = DateTime.Today.ToString("M");


  protected override async Task OnParametersSetAsync()
  {
    Role = User.GetUserFromUserName(Username).Result.GetRole();
    StateHasChanged();
  }
  
}