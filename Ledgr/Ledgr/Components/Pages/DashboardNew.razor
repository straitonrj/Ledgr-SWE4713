@page "/dashboardN/{Username}"
@using LedgrLogic
@inject Navigation Nav

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Dashboard • LEDGR</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

  <!-- Base + Page Styles -->
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="newDashboard.css">
</head>
<body class="page page--dashboard">

<!-- HEADER -->
<header class="app-header">
  <div class="app-header__top">
    <div class="brand">
      <img src="logo-slogan.png" alt="LEDGR Logo" class="brand__logo" />
    </div>

    <div class="user">
      <button @onclick="LogoutVisibility" id="userMenuBtn" class="user__btn" aria-haspopup="menu" aria-expanded="false">
        <svg class="icon icon--user" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z"/>
        </svg>
        <span class="user__name">@Username</span>
        <svg class="icon icon--caret" viewBox="0 0 24 24" aria-hidden="false"><path d="M7 10l5 5 5-5H7z"/></svg>
      </button>
@if (ShowLogout)
      {
        <button @onclick="Nav.LogOut" class="menu__item" role="menuitem" id="logoutBtn">
          <svg class="icon" viewBox="0 0 24 24" aria-hidden="false">
            <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-5 5 5 5zM4 19h6v2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6v2H4v14z"/>
          </svg>
          Log out
        </button>
      }
    </div>
  </div>

  <nav class="app-nav" aria-label="Primary">
    <div class="app-nav__inner">
      <ul class="app-nav__list">
        <li><a @onclick="(() => Nav.Home(Username))" class="app-nav__link is-active" href="#">Dashboard</a></li>
        <li><a @onclick="(() => Nav.CoAListCall(Username))" class="app-nav__link" href="#">Chart of Accounts</a></li>
        <li><a @onclick="(() => Nav.CoAEventLog(Username))" class="app-nav__link" href="#">Event Log</a></li>
        <li><a @onclick="(() => Nav.AdjustJournal(Username))" class="app-nav__link" href="#">Journal</a></li>
        <li><a @onclick="(() => Nav.Reports(Username))" class="app-nav__link" href="#l">Reports</a></li>
      </ul>
    </div>
  </nav>
</header>

<SideBar>
  <button @onclick="(() => Nav.Home(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Dashboard</button>
  <button @onclick="(() => Nav.CoAListCall(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Chart of Accounts List</button>
  <button @onclick="(() => Nav.CoAForm(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Form</button>
  <button @onclick="(() => Nav.CoAEventLog(Username))" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none" >Chart of Accounts Event Log</button>
  @if (Role == "Admin")
  {
  <button @onclick="() => Nav.ManageUser(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Manage Users</button>
  <button @onclick="() => Nav.PasswordReport(Username)" type="button" class="btn-nav" style="background-color: #1e1e2f; color: #FFFFFF; border: none">Password Report</button>
  }
</SideBar>

<!-- DATE DROPDOWN BOX -->
<div class="toolbar">
  <button id="dateBtn" class="date-btn" aria-haspopup="dialog" aria-expanded="false">
    <svg class="icon icon--calendar" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M7 2v2H5a2 2 0 0 0-2 2v2h18V6a2 2 0 0 0-2-2h-2V2h-2v2H9V2H7Zm14 8H3v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V10Zm-14 4h6v4H7v-4Z"/>
    </svg>
    <span id="dateText">@CalendarDate</span>
  </button>
  <input id="dateInput" type="date" class="visually-hidden">
</div>

<!-- CALENDAR -->
<div id="calendarPopover" class="cal" role="dialog" aria-modal="true" aria-labelledby="calLabel" hidden>
  <div class="cal__inner">
    <div class="cal__header">
      <button class="cal__nav" data-dir="-1" aria-label="Previous month">‹</button>
      <div id="calLabel" class="cal__label">October 2025</div>
      <button class="cal__nav" data-dir="1" aria-label="Next month">›</button>
    </div>
    <div class="cal__grid cal__dow">
      <span>Su</span><span>Mo</span><span>Tu</span><span>We</span><span>Th</span><span>Fr</span><span>Sa</span>
    </div>
    <div id="calGrid" class="cal__grid"></div>
  </div>
</div>

<!-- MAIN -->
<main class="container1">
  <h1 class="page-title">Dashboard</h1>

  <!-- DASHBOARD LAYOUT -->
  <section class="dashboard-grid" aria-label="Financial overview">

    <!-- LEFT: RATIOS -->
    <section class="dashboard-panel" aria-label="Financial ratios">
      <header class="section-header">
        <h2 class="section-title">Financial Ratios</h2>
        <p class="section-subtitle">
          Values are based on the solved problem data for the selected date or period.
        </p>
      </header>

      <!-- Ratio summary cards (color coded) -->
      <div class="ratio-cards">
        <!-- Example Liquidity Ratios -->
        @if (Convert.ToDouble(CurrentRatioNum) > 3)
        {
          <article class="ratio-card ratio--good" data-ratio="current" title="Current Assets ÷ Current Liabilities">
            <h3 class="ratio-card__name">Current Ratio</h3>
            <p class="ratio-card__value" id="ratio-current">@CurrentRatio</p>
            <p class="ratio-card__formula">Current Assets ÷ Current Liabilities</p>
          </article>
        }

        @if (Convert.ToDouble(CurrentRatioNum) < 3 && Convert.ToDouble(CurrentRatioNum) > 1.5)
        {
          <article class="ratio-card ratio--warning" data-ratio="current" title="Current Assets ÷ Current Liabilities">
            <h3 class="ratio-card__name">Current Ratio</h3>
            <p class="ratio-card__value" id="ratio-current">@CurrentRatio</p>
            <p class="ratio-card__formula">Current Assets ÷ Current Liabilities</p>
          </article>
        }

        @if (Convert.ToDouble(CurrentRatioNum) < 1.5)
        {
        <article class="ratio-card ratio--bad" data-ratio="current" title="Current Assets ÷ Current Liabilities">
          <h3 class="ratio-card__name">Current Ratio</h3>
          <p class="ratio-card__value" id="ratio-current">@CurrentRatio</p>
          <p class="ratio-card__formula">Current Assets ÷ Current Liabilities</p>
        </article>
        }

        @if (Convert.ToInt32(QuickRatioNum) > 1)
        {
          <article class="ratio-card ratio--good" data-ratio="quick" title="(Current Assets − Inventory) ÷ Current Liabilities">
            <h3 class="ratio-card__name">Quick Ratio</h3>
            <p class="ratio-card__value" id="ratio-quick">@QuickRatio</p>
            <p class="ratio-card__formula">(Current Assets − Inventory) ÷ Current Liabilities</p>
          </article>
        }

        @if (Convert.ToInt32(QuickRatioNum) > .8 && Convert.ToInt32(QuickRatioNum) < 1)
        {
        <article class="ratio-card ratio--warning" data-ratio="quick" title="(Current Assets − Inventory) ÷ Current Liabilities">
          <h3 class="ratio-card__name">Quick Ratio</h3>
          <p class="ratio-card__value" id="ratio-quick">@QuickRatio</p>
          <p class="ratio-card__formula">(Current Assets − Inventory) ÷ Current Liabilities</p>
        </article>
        }

        @if (Convert.ToInt32(QuickRatioNum) < .8)
        {
        <article class="ratio-card ratio--bad" data-ratio="quick" title="(Current Assets − Inventory) ÷ Current Liabilities">
          <h3 class="ratio-card__name">Quick Ratio</h3>
          <p class="ratio-card__value" id="ratio-quick">@QuickRatio</p>
          <p class="ratio-card__formula">(Current Assets − Inventory) ÷ Current Liabilities</p>
        </article>
        }

        @if (Convert.ToDouble(WorkingCapitalNum) > 0)
        {
          <article class="ratio-card ratio--good" data-ratio="working-capital" title="Current Assets − Current Liabilities">
            <h3 class="ratio-card__name">Working Capital</h3>
            <p class="ratio-card__value" id="ratio-working-capital">@WorkingCapital</p>
            <p class="ratio-card__formula">Current Assets − Current Liabilities</p>
          </article>
        }
        @if (Convert.ToDouble(WorkingCapitalNum) == 0)
        {
        <article class="ratio-card ratio--warning" data-ratio="working-capital" title="Current Assets − Current Liabilities">
          <h3 class="ratio-card__name">Working Capital</h3>
          <p class="ratio-card__value" id="ratio-working-capital">@WorkingCapital</p>
          <p class="ratio-card__formula">Current Assets − Current Liabilities</p>
        </article>
        }
        @if (Convert.ToDouble(WorkingCapitalNum) < 0)
        {
          <article class="ratio-card ratio--bad" data-ratio="working-capital" title="Current Assets − Current Liabilities">
            <h3 class="ratio-card__name">Working Capital</h3>
            <p class="ratio-card__value" id="ratio-working-capital">@WorkingCapital</p>
            <p class="ratio-card__formula">Current Assets − Current Liabilities</p>
          </article>
        }


        <!-- Profitability -->
        @if (Convert.ToDouble(NetProfitMarginNum) > 20)
        {
          <article class="ratio-card ratio--good" data-ratio="net-margin" title="Net Income ÷ Net Sales">
            <h3 class="ratio-card__name">Net Profit Margin</h3>
            <p class="ratio-card__value" id="ratio-net-margin">@NetProfitMargin</p>
            <p class="ratio-card__formula">Net Income ÷ Net Sales</p>
          </article>
        }

        @if (Convert.ToDouble(NetProfitMarginNum) < 20 && Convert.ToDouble(NetProfitMarginNum) > 10)
        {
        <article class="ratio-card ratio--warning" data-ratio="net-margin" title="Net Income ÷ Net Sales">
          <h3 class="ratio-card__name">Net Profit Margin</h3>
          <p class="ratio-card__value" id="ratio-net-margin">@NetProfitMargin</p>
          <p class="ratio-card__formula">Net Income ÷ Net Sales</p>
        </article>
        }

        @if (Convert.ToDouble(NetProfitMarginNum) < 10)
        {
        <article class="ratio-card ratio--bad" data-ratio="net-margin" title="Net Income ÷ Net Sales">
          <h3 class="ratio-card__name">Net Profit Margin</h3>
          <p class="ratio-card__value" id="ratio-net-margin">@NetProfitMargin</p>
          <p class="ratio-card__formula">Net Income ÷ Net Sales</p>
        </article>
        }

        @if (Convert.ToDouble(RoANum) > 12)
        {
          <article class="ratio-card ratio--good" data-ratio="roa" title="Net Income ÷ Average Total Assets">
            <h3 class="ratio-card__name">Return on Assets (ROA)</h3>
            <p class="ratio-card__value" id="ratio-roa">@RoA</p>
            <p class="ratio-card__formula">Net Income ÷ Average Total Assets</p>
          </article>
        }

        @if (Convert.ToDouble(RoANum) < 12 && Convert.ToDouble(RoANum) > 6)
        {
        <article class="ratio-card ratio--warning" data-ratio="roa" title="Net Income ÷ Average Total Assets">
          <h3 class="ratio-card__name">Return on Assets (ROA)</h3>
          <p class="ratio-card__value" id="ratio-roa">@RoA</p>
          <p class="ratio-card__formula">Net Income ÷ Average Total Assets</p>
        </article>
        }

        @if (Convert.ToDouble(RoANum) < 6)
        {
        <article class="ratio-card ratio--bad" data-ratio="roa" title="Net Income ÷ Average Total Assets">
          <h3 class="ratio-card__name">Return on Assets (ROA)</h3>
          <p class="ratio-card__value" id="ratio-roa">@RoA</p>
          <p class="ratio-card__formula">Net Income ÷ Average Total Assets</p>
        </article>
        }

        @if (Convert.ToDouble(RoENum) > 20)
        {
          <article class="ratio-card ratio--good" data-ratio="roe" title="Net Income ÷ Average Equity">
            <h3 class="ratio-card__name">Return on Equity (ROE)</h3>
            <p class="ratio-card__value" id="ratio-roe">@RoE</p>
            <p class="ratio-card__formula">Net Income ÷ Average Equity</p>
          </article>
        }

        @if (Convert.ToDouble(RoENum) < 20 && Convert.ToDouble(RoENum) > 10)
        {
        <article class="ratio-card ratio--warning" data-ratio="roe" title="Net Income ÷ Average Equity">
          <h3 class="ratio-card__name">Return on Equity (ROE)</h3>
          <p class="ratio-card__value" id="ratio-roe">@RoE</p>
          <p class="ratio-card__formula">Net Income ÷ Average Equity</p>
        </article>
        }

        @if (Convert.ToDouble(RoENum) < 10)
        {
        <article class="ratio-card ratio--bad" data-ratio="roe" title="Net Income ÷ Average Equity">
          <h3 class="ratio-card__name">Return on Equity (ROE)</h3>
          <p class="ratio-card__value" id="ratio-roe">@RoE</p>
          <p class="ratio-card__formula">Net Income ÷ Average Equity</p>
        </article>
        }


        <!-- Solvency / Leverage -->
        @if (Convert.ToDouble(DebtRatioNum) < 0.3)
        {
          <article class="ratio-card ratio--good" data-ratio="debt-ratio" title="Total Liabilities ÷ Total Assets">
            <h3 class="ratio-card__name">Debt Ratio</h3>
            <p class="ratio-card__value" id="ratio-debt-ratio">@DebtRatio</p>
            <p class="ratio-card__formula">Total Liabilities ÷ Total Assets</p>
          </article>
        }

        @if (Convert.ToDouble(DebtRatioNum) > 0.3 && Convert.ToDouble(DebtRatioNum) < 0.6)
        {
        <article class="ratio-card ratio--warning" data-ratio="debt-ratio" title="Total Liabilities ÷ Total Assets">
          <h3 class="ratio-card__name">Debt Ratio</h3>
          <p class="ratio-card__value" id="ratio-debt-ratio">@DebtRatio</p>
          <p class="ratio-card__formula">Total Liabilities ÷ Total Assets</p>
        </article>
        }

        @if (Convert.ToDouble(DebtRatioNum) > 0.6)
        {
        <article class="ratio-card ratio--bad" data-ratio="debt-ratio" title="Total Liabilities ÷ Total Assets">
          <h3 class="ratio-card__name">Debt Ratio</h3>
          <p class="ratio-card__value" id="ratio-debt-ratio">@DebtRatio</p>
          <p class="ratio-card__formula">Total Liabilities ÷ Total Assets</p>
        </article>
        }

        @if (Convert.ToDouble(DebtEquityNum) < 1)
        {
          <article class="ratio-card ratio--good" data-ratio="debt-to-equity" title="Total Liabilities ÷ Total Equity">
            <h3 class="ratio-card__name">Debt-to-Equity</h3>
            <p class="ratio-card__value" id="ratio-debt-equity">@DebtEquity</p>
            <p class="ratio-card__formula">Total Liabilities ÷ Total Equity</p>
          </article>
        }

        @if (Convert.ToDouble(DebtEquityNum) > 1 && Convert.ToDouble(DebtEquityNum) < 2)
        {
        <article class="ratio-card ratio--warning" data-ratio="debt-to-equity" title="Total Liabilities ÷ Total Equity">
          <h3 class="ratio-card__name">Debt-to-Equity</h3>
          <p class="ratio-card__value" id="ratio-debt-equity">@DebtEquity</p>
          <p class="ratio-card__formula">Total Liabilities ÷ Total Equity</p>
        </article>
        }

        @if (Convert.ToDouble(DebtEquityNum) > 2)
        {
        <article class="ratio-card ratio--bad" data-ratio="debt-to-equity" title="Total Liabilities ÷ Total Equity">
          <h3 class="ratio-card__name">Debt-to-Equity</h3>
          <p class="ratio-card__value" id="ratio-debt-equity">@DebtEquity</p>
          <p class="ratio-card__formula">Total Liabilities ÷ Total Equity</p>
        </article>
        }
      </div>

      <!-- Detailed table view -->
      <div class="ratio-table-wrapper">
        <h3 class="ratio-table__title">Ratio Details</h3>
        <table class="ratio-table" aria-label="Detailed financial ratios">
          <thead>
          <tr>
            <th scope="col">Ratio</th>
            <th scope="col">Value</th>
            <th scope="col">Status</th>
            <th scope="col">Description</th>
          </tr>
          </thead>
          <tbody id="ratioTableBody">
          <!-- Rows populated/updated via dashboard.js -->
          <tr>
            <td>Current Ratio</td>
            <td id="ratio-current-val">@CurrentRatio</td>
            @if (Convert.ToDouble(CurrentRatioNum) > 3){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(CurrentRatioNum) < 3 && Convert.ToDouble(CurrentRatioNum) > 1){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(CurrentRatioNum) < 1){<td><span class="status-dot status-dot--bad">Bad</span></td> }
            <td>Measures short-term liquidity and ability to pay current liabilities.</td>
          </tr>
          <tr>
            <td>Quick Ratio</td>
            <td id="ratio-quick-val">@QuickRatio</td>
            @if (Convert.ToDouble(QuickRatioNum) > 1){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(QuickRatioNum) < 1 && Convert.ToDouble(QuickRatioNum) > .8){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(QuickRatioNum) < .8){<td><span class="status-dot status-dot--bad">Bad</span></td> }            
            <td>Liquidity excluding inventory; more conservative than current ratio.</td>
          </tr>
          <tr>
            <td>Net Profit Margin</td>
            <td id="ratio-net-margin-val">@NetProfitMargin</td>
            @if (Convert.ToDouble(NetProfitMarginNum) > 20){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(NetProfitMarginNum) < 20 && Convert.ToDouble(NetProfitMarginNum) > 10){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(NetProfitMarginNum) < 10){<td><span class="status-dot status-dot--bad">Bad</span></td> }               <td>Shows how much profit is earned from each dollar of sales.</td>
          </tr>
          <tr>
            <td>Return on Assets</td>
            <td id="ratio-net-margin-val">@RoA</td>
            @if (Convert.ToDouble(RoANum) > 12){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(RoANum) < 12 && Convert.ToDouble(RoANum) > 6){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(RoANum) < 6){<td><span class="status-dot status-dot--bad">Bad</span></td> }               
            <td>Measures the efficiency of assets regarding profit generation.</td>
          </tr>
          <tr>
            <td>Return on Equity</td>
            <td id="ratio-net-margin-val">@RoE</td>
            @if (Convert.ToDouble(RoENum) > 20){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(RoENum) < 20 && Convert.ToDouble(RoENum) > 10){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(RoENum) < 10){<td><span class="status-dot status-dot--bad">Bad</span></td> }
            <td>Compares profit versus equity to evaluate profitability.</td>
          </tr>
          <tr>
            <td>Debt Ratio</td>
            <td id="ratio-net-margin-val">@DebtRatio</td>
            @if (Convert.ToDouble(DebtRatioNum) < .3){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(DebtRatioNum) > .3 && Convert.ToDouble(DebtRatioNum) < .6){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(DebtRatioNum) > .6){<td><span class="status-dot status-dot--bad">Bad</span></td> }
            <td>Evaluates the proportion of assets that are financed by debt.</td>
          </tr>
          <tr>
            <td>Debt-to-Equity</td>
            <td id="ratio-net-margin-val">@DebtEquity</td>
            @if (Convert.ToDouble(DebtEquityNum) < 1){<td><span class="status-dot status-dot--good">Good</span></td> }
            @if (Convert.ToDouble(DebtEquityNum) > 1 && Convert.ToDouble(DebtEquityNum) < 2){<td><span class="status-dot status-dot--warning">Warning</span></td> }
            @if (Convert.ToDouble(DebtEquityNum) > 2){<td><span class="status-dot status-dot--bad">Bad</span></td> }
            <td>Proportion of finances handled by debt versus equity.</td>
          </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- RIGHT: IMPORTANT MESSAGES + LEGEND -->
    <aside class="dashboard-side">

      <!-- Important Messages -->
      <section class="dashboard-panel messages-panel" aria-label="Important messages">
        <header class="section-header">
          <h2 class="section-title">Important Messages</h2>
        </header>
        <ul class="messages-list" id="messagesList">
          <li class="messages-list__empty">No important messages at this time.</li>
        </ul>
      </section>

      <!-- Color legend -->
      <section class="dashboard-panel legend-panel" aria-label="Dashboard color legend">
        <header class="section-header">
          <h2 class="section-title">Dashboard Legend</h2>
        </header>
        <ul class="legend-list">
          <li>
            <span class="legend-dot legend-dot--good" aria-hidden="true"></span>
            <span class="legend-label"><strong>Green</strong> – within normal / healthy range</span>
          </li>
          <li>
            <span class="legend-dot legend-dot--warning" aria-hidden="true"></span>
            <span class="legend-label"><strong>Yellow</strong> – borderline or warning range</span>
          </li>
          <li>
            <span class="legend-dot legend-dot--bad" aria-hidden="true"></span>
            <span class="legend-label"><strong>Red</strong> – needs closer look / potential issue</span>
          </li>
        </ul>
      </section>

    </aside>
  </section>
</main>

<!-- FOOTER -->
<footer class="app-footer">
  <div class="app-footer__inner">
    <nav class="footer-nav">
      <a @onclick="() => Nav.HelpPage(Username)" href="#" class="link">Help</a>
      <a href="privacy.html" class="link">Privacy</a>
      <a href="terms.html" class="link">Terms</a>
    </nav>
    <small class="muted">© 2025 LEDGR · Build v0.1</small>
  </div>
</footer>

<script src="dashboardN.js"></script>
</body>
</html>

@code {

  [Parameter] public string Username { get; set; }
  public string Role { get; set; }
  public string CalendarDate = DateTime.Today.ToString("M");
  
  public string CurrentRatio { get; set; }
  public string QuickRatio { get; set; }
  public string WorkingCapital { get; set; }
  public string NetProfitMargin { get; set; }
  public string RoA { get; set; }
  public string RoE { get; set; }
  public string DebtRatio { get; set; }
  public string DebtEquity { get; set; }
  
  public double CurrentRatioNum { get; set; }
  public double QuickRatioNum { get; set; }
  public double WorkingCapitalNum { get; set; }
  public double NetProfitMarginNum { get; set; }
  public double RoANum { get; set; }
  public double RoENum { get; set; }
  public double DebtRatioNum { get; set; }
  public double DebtEquityNum { get; set; } 

  public List<string> Statuses = new List<string>();
  
  protected override async Task OnParametersSetAsync()
  {
    Role = User.GetUserFromUserName(Username).Result.GetRole();
    
    QuickRatio = User.GetQuickRatio().ToString("N2");
    NetProfitMargin = User.GetNetProfitMargin().ToString("N2");
    RoA = User.GetRoA().ToString("N2");
    RoE = User.GetRoE().ToString("N2");

    DebtRatio = User.GetDebtRatio().ToString("N2");
    DebtEquity = User.GetDtE().ToString("N2");
    CurrentRatio = User.GetCurrentRatio().ToString("N2");
